<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/WEB-INF/views/home.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>loginCheck</filter-name>
        <filter-class>com.fictics.phonebook.web.LoginCheckFilter</filter-class>
    </filter>
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>com.fictics.phonebook.web.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dashboardServlet</servlet-name>
        <servlet-class>com.fictics.phonebook.web.DashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.fictics.phonebook.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.fictics.phonebook.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addContactServlet</servlet-name>
        <servlet-class>com.fictics.phonebook.web.AddContactServlet</servlet-class>
    </servlet>
    <filter-mapping>
        <filter-name>loginCheck</filter-name>
        <servlet-name>dashboardServlet</servlet-name>
        <servlet-name>addContactServlet</servlet-name>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addContactServlet</servlet-name>
        <url-pattern>/addContact</url-pattern>
    </servlet-mapping>
</web-app>